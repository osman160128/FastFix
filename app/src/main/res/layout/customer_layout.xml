<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="5dp"
    app:cardElevation="4dp"
    app:cardUseCompatPadding="true"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        >
        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/request_customer_img"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:src="@drawable/logo"
             app:civ_border_width="2dp"
             app:civ_border_color="#FFFFFF" 
        />

        <TextView
            android:id="@+id/request_customer_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="osman is send service request near you "
            android:layout_toRightOf="@+id/request_customer_img"
            android:layout_margin="5dp"
            />

        <TextView
            android:id="@+id/request_customer_cancel"
            android:layout_width="80dp"
            android:layout_height="20dp"
            android:textAlignment="center"
            android:layout_marginStart="5dp"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="5dp"
            android:layout_marginBottom="5dp"
            android:layout_toLeftOf="@+id/request_customer_accept"
            android:text="Cancel"
            android:textStyle="bold"
            android:background="@drawable/circle_button"
            android:layout_alignParentBottom="true"
            />
        <TextView
            android:id="@+id/request_customer_accept"
            android:layout_width="80dp"
            android:layout_height="20dp"
            android:textAlignment="center"
            android:text="Accept"
            android:textStyle="bold"
            android:layout_margin="5dp"
            android:layout_alignParentRight="true"
            android:background="@drawable/circle_button"
            android:layout_alignParentBottom="true"

            />
    </RelativeLayout>

</androidx.cardview.widget.CardView>