<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="15dp"
    android:elevation="7dp"
    app:cardUseCompatPadding="true">
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="5dp"
        android:layout_gravity="center"
        >
        <ImageView
            android:id="@+id/alart_dilog_sermicemanImg"
            android:layout_width="120dp"
            android:layout_height="100dp"
            android:layout_marginBottom="10dp"
            android:scaleType="fitXY"
            />

        <TextView
            android:id="@+id/alart_dilog_sermiceman_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="he accptyour request"
            android:textSize="17dp"
            android:textStyle="bold"
           android:layout_margin="10dp"
            android:textAlignment="center"
            android:layout_gravity="center"
            android:layout_toRightOf="@+id/alart_dilog_sermicemanImg"
            />

        <TextView
            android:id="@+id/service_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="price"
            android:textSize="17dp"
            android:textStyle="bold"
            android:layout_margin="10dp"
            android:textAlignment="center"
            android:layout_gravity="center"
            android:layout_toRightOf="@+id/alart_dilog_sermicemanImg"
            android:layout_below="@+id/alart_dilog_sermiceman_name"
            />

    </RelativeLayout>




</androidx.cardview.widget.CardView>