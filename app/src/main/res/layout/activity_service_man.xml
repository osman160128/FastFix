<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".serviceworker.ServiceManActivity">

    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/serviceman_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:menu="@menu/service_man_toolbar"
        android:background="#A212CD"
        />
    <FrameLayout
        android:id="@+id/addServiceManMap"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Service Activity"
        />

    <com.etebarian.meowbottomnavigation.MeowBottomNavigation
        android:id="@+id/service_man_fragment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:mbn_circleColor="#ffffff"
        app:mbn_backgroundBottomColor="#ffffff"
        app:mbn_countBackgroundColor="#ff6f00"
        app:mbn_countTextColor="#ffffff"
        app:mbn_defaultIconColor="#90a4ae"
        app:mbn_rippleColor="#2f424242"
        app:mbn_selectedIconColor="#3c415e"
        app:mbn_shadowColor="#1f212121"
        android:layout_alignParentBottom="true"
        />


</RelativeLayout>